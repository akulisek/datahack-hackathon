<section id="content">
  <div class="row">
    <h3>Vykonávané funkcie</h3>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Popis</th>
      </tr>
      </thead>
      <tbody>
      <% proclamation.jobs.each do |job| %>
          <tr>
            <td><%= job.description %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

