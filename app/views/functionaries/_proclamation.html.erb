          <th>Mena</th>
        </tr>
        </thead>
        <tbody>
        <% proclamation.gains.select { |g| g.category == 'administrative' }.each do |gain| %>
            <tr>
              <td><%= gain.value > 0 ? gain.convert_value_to_eur : '-' %></td>
